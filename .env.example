# Spiral Codex Unified - Environment Configuration Example
# Copy to .env and customize

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Brain Configuration
BRAIN_LEDGER_PATH=codex_root/brain/codex_immutable_ledger.json
BRAIN_MAX_STEPS=10

# Agent Configuration
AGENT_CODEX_ENABLED=true
AGENT_CLAUDE_ENABLED=true
AGENT_VIBE_KEEPER_ENABLED=true
AGENT_ARCHIVIST_ENABLED=true

# Security (set strong values in production!)
API_KEY_HEADER=X-API-Key
# API_KEY=your-secure-api-key-here

# Entropy Monitoring
ENTROPY_THRESHOLD=0.8
VIBE_CHECK_INTERVAL=30

# Glyph Engine
GLYPH_CONFIG_PATH=config/epoch_config.yml
EPOCH_NAME="Johnny Five"

# Optional: External Services
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Database (future)
# DATABASE_URL=postgresql://user:pass@localhost/spiral_codex
# REDIS_URL=redis://localhost:6379

# Monitoring
# PROMETHEUS_ENABLED=false
# METRICS_PORT=9090
